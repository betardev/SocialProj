<script>

var nonRightLogin = false;

function onLogin(){
var password = document.getElementById("password").value;
var userMail = document.getElementById("loginInf").value;
if(password.length > 0 && userMail.length > 0)
	sendFormInfo();

}

function sendFormInfo(){
	var loginInfo = document.getElementById("loginInf").value;
	var passwordInfo = document.getElementById("password").value;
	var url="CheckLoginInfo.jsp?loginInf=" + loginInfo + "&password=" + passwordInfo;
	 
	if(window.XMLHttpRequest){  
		request = new XMLHttpRequest();  
	}  
    else if(window.ActiveXObject){  
		request = new ActiveXObject("Microsoft.XMLHTTP");  
	}  
	
	try{   
		request.open("GET",url,true);
		request.onreadystatechange = getInfo;
		request.send();
		}catch(e){alert("Unable to connect to server");}  
}


function getInfo(){
	if(request.readyState == 4){
		alert(request.responeText);
		var jsonResponse = JSON.parse(request.responseText);
	}  	
}




</script>

